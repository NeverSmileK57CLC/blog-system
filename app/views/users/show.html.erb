<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
        <%= gravatar_for @user, size: 100 %>
        <div class="name-email">
          <h1><%= @user.name %></h1>
          <%= @user.email %>
        </div>
    </section>
    <section class="stats">

    </section>
    <%= link_to("Create Entry", new_entry_path, class: "btn btn-success create-entry") if @user == current_user %>
  </aside>
  <div class="col-md-8">

    <div class="col-md-10">
    <h3>Entries</h3>
      <ol class="entries">
        <%= render @user.entries %>
      </ol>
    </div>
    <div class="col-md-2"></div>
  </div>
</div>

<%= link_to 'Edit', edit_user_path(@user) %> |
<%= link_to 'Back', users_path %>

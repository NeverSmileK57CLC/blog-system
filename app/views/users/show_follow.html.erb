<% provide(:title, @title) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= gravatar_for @user, size: 100 %>
      <div class="name-email">
        <h1><%= @user.name %></h1>
        <%= @user.email %>
      </div>
    </section>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <%= link_to("Create Entry", new_entry_path, class: "btn btn-success create-entry") if @user == current_user %>
  </aside>
  <div class="col-md-8">
    <h3>
      <% if @users.any? %>
        <ul class="users follow">
          <%= render @users %>
        </ul>
        <%= will_paginate %>
      <% end %>
    </h3>
  </div>
</div>

<div class="row">
  <% user = comment.user %>
  <%= gravatar_for(user) %>
  <div class="row">
    <%= link_to edit_comment_path(comment) do %>
      <div class="edit-comment"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></div>
    <% end %>
    <p><strong><%= link_to user.name, user %></strong></p>
    <p><%= comment.content %></p>
    <span class="time-ago">
      <% unless comment.time_edit.nil? %>
        <%= time_ago_in_words(comment.time_edit) %> ago. Edited
      <% else %>
        <%= time_ago_in_words(comment.created_at) unless comment.created_at.blank? %> ago
      <% end %>
    </span>
    </div>
</div>

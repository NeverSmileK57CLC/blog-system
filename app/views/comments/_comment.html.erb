<div class="row">
  <% user = comment.user %>
  <%= gravatar_for(user) %>
  <div class="row">
    <% if current_user == comment.user %>
      <li class="dropdown edit">
        <a href="#" class="dropdown-toggle edit-comment" data-toggle="dropdown">
          <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
        </a>
        <ul class="dropdown-menu">
          <li><%= link_to "Edit...", edit_comment_path(comment) %></li>
          <li><%= link_to "Delete...", comment_path(comment), method: :delete, data: { confirm: "Do you want to delete this comment?"} %></li>
        </ul>
      </li>
    <% end %>
    <p><strong><%= link_to user.name, user %></strong></p>
    <p><%= comment.content %></p>
    <span class="time-ago">
      <% unless comment.time_edit.nil? %>
        <%= time_ago_in_words(comment.time_edit) %> ago. Edited
      <% else %>
        <%= time_ago_in_words(comment.created_at) unless comment.created_at.blank? %> ago
      <% end %>
    </span>
    </div>
</div>

<div class="row form">
  <%= gravatar_for(current_user) %>
  <%= form_for(@comment, remote: true) do |f| %>
    <%= f.hidden_field :entry_id, value: @entry.id %>
    <%= f.hidden_field :user_id, value: current_user.id %>
    <%= f.text_field :content, placeholder: "Leave a comment..." %>
  <% end %>
</div>

<%= form_for(@entry) do |f| %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title, class: 'form-control', required: true %>
  </div>
  <div class="field">
    <%= f.label :content %><br>
    <%= f.text_area :content, class: 'form-control', placeholder: "Write something!", required: true %>
  </div>
  <div class="actions">
    <%= f.submit class: 'btn btn-success' %>
  </div>
<% end %>
